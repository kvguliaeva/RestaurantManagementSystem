@model RestaurantManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Удалить сотрудника";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<h3>Вы уверены, что хотите удалить этого сотрудника?</h3>
<div class="card mt-3">
    <div class="card-body">
        <h4 class="card-title">@Model.User?.Name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Должность:</dt>
            <dd class="col-sm-8">@Model.Position</dd>

            <dt class="col-sm-4">Дата приема:</dt>
            <dd class="col-sm-8">@Model.HireDate.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-4">Статус:</dt>
            <dd class="col-sm-8">@Model.Status</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="EmployeeId" />
    <input type="submit" value="Удалить" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>